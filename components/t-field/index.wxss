.t-field {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #F4F4F4;
}

.t-field .t-field-label {
  text-align-last: justify;
  text-align: justify;
  text-justify: distribute-all-lines;
  margin-right: 30rpx;
  color: #555555;
  font-size: 28rpx;
}

.t-field .t-field-input {
  flex: 1;
}

.t-field .placeholder-class {
  font-size: 28rpx;
  color: #9297A0;
}